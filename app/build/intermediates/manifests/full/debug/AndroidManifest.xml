<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.wlabuda.multiapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="pl.wlabuda.multiapplication.Global"
        android:icon="@drawable/objectcontrol"
        android:label="@string/app_name" >
        <activity
            android:name="pl.wlabuda.multiapplication.RightWay"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="pl.wlabuda.multiapplication.Compass" />
        <activity
            android:name="pl.wlabuda.multiapplication.Gps2sms"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>