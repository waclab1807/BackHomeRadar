<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="#000"
    android:showDividers="middle"
    android:divider="@drawable/linear"
    >
<TextView
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:theme="@style/TextColor"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TextColor"
            android:text="Twoje aktualne współrzędne to:"
            android:id="@+id/textView10" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/TextColor"
            android:layout_weight="1.5"
            android:text="Długość:"
            android:id="@+id/textView121" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="szukam..."
            android:layout_weight="1"
            android:id="@+id/longitude" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Szerokość:"
            android:layout_weight="1.5"
            android:theme="@style/TextColor"
            android:id="@+id/textView122" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="szukam..."
            android:layout_weight="1"
            android:id="@+id/latitude" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:text="@string/waiting"
            android:id="@+id/waiting" />

    <LinearLayout
    android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pamiec1"
            android:theme="@style/TextColor"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Zapamiętaj pozycję startową" />

        <Button
        android:id="@+id/start"
        android:theme="@style/TextColor"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_gravity="center_vertical" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/pamiec2"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:theme="@style/TextColor"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Zapamiętaj pozycję końcową"
        android:layout_gravity="center_vertical" />

    <Button
        android:id="@+id/stop"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:theme="@style/TextColor"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_gravity="center_vertical" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6">

    <TextView
        android:id="@+id/textView3"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"
        android:theme="@style/TextColor"
        android:gravity="center"
        android:text="Dystans: "
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/dystans"
        android:layout_weight="2.5"
        android:textStyle="bold"
        android:theme="@style/TextColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0.0"
        android:layout_gravity="center_vertical" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:theme="@style/TextColor"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_gravity="center_vertical" />

</LinearLayout>

    <view
	class="pl.wlabuda.backhomeradar.MyWayView"
	android:id="@+id/mycompassview"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	/>
</LinearLayout>
